# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Supabase (for image uploads)
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Crypto provider (nowpayments | plisio)
CRYPTO_PROVIDER=nowpayments

# NOWPayments
NOWPAYMENTS_API_KEY=your_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret

# Plisio
PLISIO_API_KEY=your_api_key
# Optional: comma-separated list of allowed currencies/coins (Plisio "psyscid" codes)
PLISIO_ALLOWED_PSYS=
# Optional: required by Plisio API even when using fiat amounts. Default: BTC
PLISIO_DEFAULT_CURRENCY=BTC
# Optional invoice expiry minutes
PLISIO_EXPIRE_MIN=

# Hot Recharge API (Airtime)
HOT_ACCESS_CODE=your_access_code
HOT_PASSWORD=your_password
HOT_BASE_URL=https://ssl.hot.co.zw

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# NextAuth
NEXTAUTH_SECRET=generate-a-random-32-char-string
NEXTAUTH_URL=http://localhost:3000

# Admin (for initial seed)
ADMIN_EMAIL=admin@shoppy.co.zw
ADMIN_PASSWORD=changeme123

# App
NEXT_PUBLIC_BASE_URL=http://localhost:3000
