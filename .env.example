# NOWPayments Configuration
# Get your API key from: https://account.nowpayments.io/api-keys
NOWPAYMENTS_API_KEY=your_api_key_here

# IPN Secret for webhook verification (optional but recommended)
# Set this in NOWPayments dashboard under Settings > IPN
NOWPAYMENTS_IPN_SECRET=your_ipn_secret_here

# Telegram Notifications
# Create a bot via @BotFather, then get your chat ID via @userinfobot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Base URL (for payment callbacks)
# In production, set this to your actual domain
NEXT_PUBLIC_BASE_URL=https://your-domain.com
